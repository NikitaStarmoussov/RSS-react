{
    "testEnvironment": "jsdom",
    "transform": {"^.+\\.(js|jsx|ts|tsx)$": "babel-jest"},
    "transformIgnorePatterns": ["node_modules/(?!(@babel)/)"],
    "extensionsToTreatAsEsm": [".ts", ".tsx"],
    "testMatch": [
      "**/__tests__/**/*.(t|j)sx?(x)",  "**/?(*.)+(spec|test).ts",
      "**/?(*.)+(spec|test).js"
    ]
  }